<h1>Listing tags</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% for tags in @tags %>
  <tr>
    <td><%=h tags.name %></td>
    <td><%=h tags.description %></td>
    <td><%= link_to 'Show', tags %></td>
    <td><%= link_to 'Edit', edit_tags_path(tags) %></td>
    <td><%= link_to 'Destroy', tags, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tags', new_tags_path %>
